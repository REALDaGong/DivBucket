<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tj007.divbucketmvp">

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".mailboxsystem.EmailApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.activity.UserInfoActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".view.activity.UploadAvatarActivity" />
        <activity android:name=".view.activity.HomePageActivity" />
        <activity android:name=".view.activity.GoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.ClipImageActivity" />
        <activity
            android:name=".view.Main2Activity"
            android:label="@string/title_activity_main2" />

        <meta-data
            android:name="com.tj007.divbucketmvp"
            android:value="string" />

        <activity
            android:name=".view.ChooseWatchingTargetActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ShowDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".mailboxsystem.activity.ConfigActivity" />
        <activity android:name=".mailboxsystem.activity.MainActivity" />
        <activity android:name=".mailboxsystem.activity.SendActivity" />
        <activity android:name=".mailboxsystem.activity.ListActivity" />
        <activity android:name=".mailboxsystem.activity.SettingsActivity" />
        <activity android:name=".mailboxsystem.activity.WatchActivity" />
        <activity android:name=".mailboxsystem.activity.SplashActivity" />
    </application>

</manifest>